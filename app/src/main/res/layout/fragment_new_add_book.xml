<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green"
    tools:context="com.example.katz.myavtivity.NewAddBookFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <ImageButton
                android:layout_width="62dp"
                android:layout_height="59dp"
                android:id="@+id/imageButton"
                android:background="@mipmap/ic_launcher"
                android:clickable="true"
                android:longClickable="false" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

            <EditText
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textAlignment="center"
                android:id="@+id/editBookName"
                android:hint="Book Name" />

        </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/editAutor"
            android:layout_gravity="center_horizontal"
            android:hint="Autor Name" />



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/editGener"
            android:layout_gravity="center_horizontal"
            android:hint="Ganre" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editPagenumber"
                android:width="180dp"
                android:hint="Page Number: " />
            <android.widget.Space
                android:layout_width="85dp"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editSummery"
                android:width="150dp"
                android:hint="Price:" />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editAmount"
            android:layout_gravity="center_horizontal"
            android:hint="Amount:" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/button6"
        android:layout_gravity="center_horizontal|bottom"
        android:clickable="true"
        android:background="@drawable/button" />
</FrameLayout>
